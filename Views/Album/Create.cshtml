@model AlbumSong.Models.Album
@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Create New Album</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">
       

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Name</label>
                    <input asp-for="Name" class="form-control" />
                     <span asp-validation-for="Name" class="text-danger"></span>  
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Cover Photo</label>
                                <input type="file" name="Ifile" id="Ifile" class="form-control-file" onchange="previewImage()" required/>
                    <div class="mt-3 text-center">
                        <img id="preview" src="#" alt="Preview image" width="200"
                             style="display: none; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.2);" /> 

                </div>
               
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                
                     <button type="button" class="btn btn-secondary text-end" onclick="addSong()">Add Song</button>
                <br />
                <br />
                     <table class="table table-bordered" id="songTable" >
                        <thead>
                            <tr class="text-center">
                                <th>ชื่อเพลง</th>
                                <th>จัดการ</th>
                            </tr>
                        </thead>
                        <tbody id="songBody" >
                            
                            <!-- แถวเพลงจะถูกเพิ่มที่นี่ -->

                        </tbody>
                    </table>
                </div>

                <div class="form-group mt-4 text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>              
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}