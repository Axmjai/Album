@model AlbumSong.Models.Album

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit Album</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit"  method="post" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">
             @Html.HiddenFor(Model => Model.File.FileName)
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

                @Html.EditorFor(Model => Model.File)

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group mb-3">
                    <h5 class="fw-bold">Songs</h5>

                    <button type="submit" name="action" value="addSong" class="btn btn-secondary mb-3">➕ เพิ่มเพลง</button>

                    <table class="table table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th>ชื่อเพลง</th>
                                <th>จัดการ</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                            @Html.EditorFor(model => model.Songs)
                        </tbody>
                    </table>
                </div>

            <div class="form-group mt-4 text-center">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

